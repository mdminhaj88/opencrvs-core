{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "monorepo:lerna"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "pruneStaleBranches": false,
  "timezone": "Europe/London",
  "schedule": [
    "after 5pm every weekday",
    "before 3am every weekday",
    "every weekend"
  ]
}
